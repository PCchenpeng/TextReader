<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp"/>

            <solid android:color="@color/color_4D72FF"/>

        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp"/>

            <solid android:color="#4D72FF"/>

            <stroke
                android:width="8dp"
                android:color="#884D72FF"/>
        </shape>
    </item>

</selector>