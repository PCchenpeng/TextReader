<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp">

    <RelativeLayout
        android:id="@+id/rl_writing_grade_filter_item"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/selector_writing_grade_item_bg">

        <TextView
            android:id="@+id/tv_writing_grade_filter_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@drawable/selector_black_white_text_color"
            android:textSize="13sp"/>

    </RelativeLayout>

</RelativeLayout>