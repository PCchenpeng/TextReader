<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/smart_refresh_layout_home_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <com.dace.textreader.view.tab.SmartTabLayout
        android:id="@+id/tab_layout_home_fragment"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorToolBarBg"
        app:stl_defaultTabTextColor="@drawable/color_tab_text"
        app:stl_defaultTabTextMinWidth="80dp"
        app:stl_defaultTabTextSize="15sp"
        app:stl_dividerColor="@color/colorTransparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="@color/colorOrange"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorWidth="20dp"
        app:stl_titleOffset="auto_center"
        app:stl_underlineColor="@color/colorTransparent"
        app:stl_underlineThickness="0dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"/>

    <RelativeLayout
        android:id="@+id/rl_search_home_fragment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_search"/>

    </RelativeLayout>

</RelativeLayout>