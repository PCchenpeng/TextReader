<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@color/colorVoiceBg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_play_voice_evaluation_fragment"
            android:layout_width="137dp"
            android:layout_height="111dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_play_bg_voice_evaluation_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_play_voice_evaluation_fragment"
                android:layout_width="33dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:src="@drawable/icon_play_white"/>

            <com.dace.textreader.view.voice.SLoadingIndicatorView
                android:id="@+id/audio_column_view_voice_evaluation_fragment"
                android:layout_width="33dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <include
            layout="@layout/layout_voice_evaluation_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_score_voice_evaluation_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/colorTextImportant"
            android:textSize="50sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="满分100分"
            android:textColor="@color/colorTextNormal"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_issue_voice_evaluation_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="评估及建议"
            android:textColor="@color/colorDarkRedNormal"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_content_voice_evaluation_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:lineSpacingMultiplier="1.7"
            android:textColor="@color/colorTextImportant"
            android:textSize="18sp"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>