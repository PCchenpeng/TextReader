<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_time_limit_setting_bg">

    <RelativeLayout
        android:id="@+id/rl_close_time_limit_setting"
        android:layout_width="48dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_close_white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_close_time_limit_setting">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_timing_time_limit_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计时开启"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_timing_time_limit_setting"
                    android:layout_width="52dp"
                    android:layout_height="32dp"
                    app:kswBackDrawable="@drawable/selector_switch_track"
                    app:kswThumbDrawable="@drawable/selector_switch_thumb"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_countdown_time_limit_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_timing_time_limit_setting"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="倒计设置"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_countdown_time_limit_setting"
                    android:layout_width="52dp"
                    android:layout_height="32dp"
                    app:kswBackDrawable="@drawable/selector_switch_track"
                    app:kswThumbDrawable="@drawable/selector_switch_thumb"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_remind_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
