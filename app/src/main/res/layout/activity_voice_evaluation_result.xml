<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_root_voice_evaluation_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/shape_dark_red_scrollbar"
        android:scrollbarTrackVertical="@drawable/shape_dark_red_scrollbar_track"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:background="@color/colorDarkRedLight"/>

                <TextView
                    android:id="@+id/tv_title_voice_evaluation_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="海选结果"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="25sp"/>

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:background="@color/colorDarkRedLight"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_content_voice_evaluation_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="22dp"
                android:lineSpacingMultiplier="1.7"
                android:textColor="@color/colorTextImportant"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_score_voice_evaluation_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorDarkRedLight"
                android:textSize="40sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="综合得分"
                android:textColor="@color/colorTextImportant"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/rl_self_voice_evaluation_result"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_self_status_voice_evaluation_result"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_self_text_voice_evaluation_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_self_status_voice_evaluation_result"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/iv_self_status_voice_evaluation_result"
                    android:text="自我介绍"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/tv_self_score_voice_evaluation_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_self_text_voice_evaluation_result"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_self_status_voice_evaluation_result"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="42dp"
                    android:src="@drawable/icon_to_right_white"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_speech_voice_evaluation_result"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_speech_status_voice_evaluation_result"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_speech_text_voice_evaluation_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_speech_status_voice_evaluation_result"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/iv_speech_status_voice_evaluation_result"
                    android:text="朗读环节"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/tv_speech_score_voice_evaluation_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_speech_text_voice_evaluation_result"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_speech_status_voice_evaluation_result"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="42dp"
                    android:src="@drawable/icon_to_right_white"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_eligibility_voice_evaluation_result"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/frame_voice_evaluation_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rl_back_voice_evaluation_result"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_shadow_back"/>

    </RelativeLayout>

</RelativeLayout>