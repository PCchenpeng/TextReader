<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/statusView_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.xiao.nicevideoplayer.NiceVideoPlayer
                android:visibility="gone"
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="250dp">
            </com.xiao.nicevideoplayer.NiceVideoPlayer>

            <!--<RelativeLayout-->
                <!--android:id="@+id/rl_top"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
                <!--<ImageView-->
                    <!--android:id="@+id/iv_topimg"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="250dp"-->
                    <!--android:scaleType="fitXY"/>-->
                <!--<ImageView-->
                    <!--android:id="@+id/iv_playvideo"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:src="@drawable/article_icon_video"/>-->
            <!--</RelativeLayout>-->

            <com.dace.textreader.view.StatusBarHeightView
                android:id="@+id/statusView_top_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:use_type="use_padding_top">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp" >
                    <RelativeLayout
                        android:id="@+id/rl_back_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_bg_back"/>
                    </RelativeLayout>
                </RelativeLayout>
            </com.dace.textreader.view.StatusBarHeightView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/videoplayer"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="15dp">
                    <ImageView
                        android:id="@+id/iv_author"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_author"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/iv_audio"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@id/tv_author"
                        android:src="@drawable/icon_speaker_blue"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:id="@+id/rl_follow"
                        android:layout_width="67dp"
                        android:layout_height="29dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_author_follow_bg">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_follow"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_concern_add" />

                            <TextView
                                android:id="@+id/tv_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="关注"
                                android:textColor="@color/colorWhite"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <com.dace.textreader.view.weight.pullrecycler.ExpandableTextView
                    android:id="@+id/expand_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    expandableTextView:maxCollapsedLines="5">
                    <TextView
                        android:id="@+id/expandable_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra = "10dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#333333"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal|bottom">
                        <TextView
                            android:id="@+id/button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="展开"/>
                        <ImageButton
                            android:id="@+id/expand_collapse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="16dp"

                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </com.dace.textreader.view.weight.pullrecycler.ExpandableTextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F7F7F9"/>
                <RelativeLayout
                    android:id="@+id/rl_magnumopus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代表作"
                    android:layout_margin="15dp"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_4D72FF"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcl_author_works"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcl_author_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>



            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.dace.textreader.view.StatusBarHeightView
        android:id="@+id/statusView_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient_home_top"
        app:use_type="use_padding_top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_white_back"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_page_title_top_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者介绍"
                android:layout_centerInParent="true"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>
        </RelativeLayout>
    </com.dace.textreader.view.StatusBarHeightView>
    <FrameLayout
        android:id="@+id/framelayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
    </FrameLayout>
</RelativeLayout>