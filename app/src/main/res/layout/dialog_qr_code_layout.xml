<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="75dp"
              android:layout_marginRight="75dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_qr_code_dialog"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_white_top_bg"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_user_qr_code_dialog"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="38dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_user_qr_code_dialog"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_user_qr_code_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_user_qr_code_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/colorTextImportant"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_close_qr_code_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@id/view_qr_code_dialog"
            android:layout_alignTop="@id/view_qr_code_dialog"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_close_white_36dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_code_decoration_01"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrderDetailBg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_qr_code_dialog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:lineSpacingMultiplier="1.5"
            android:text="识别图中二维码，邀请你加入派知语文"
            android:textColor="@color/colorTextContent"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_code_decoration_02"/>

</LinearLayout>