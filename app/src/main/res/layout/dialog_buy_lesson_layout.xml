<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="240dp"
              android:layout_height="175dp"
              android:background="@drawable/shape_white_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="您尚未购买此课程"
        android:textColor="@color/colorTextImportant"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="请先完成购买"
        android:textColor="@color/colorTextContent"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_buy_lesson_dialog"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_orange_stroke_white_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorTextImportant"
            android:textSize="14sp"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_sure_buy_lesson_dialog"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_orange_btn"
            android:gravity="center"
            android:text="去购买"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>