<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <TextView
        android:id="@+id/tv_error_correction_choose_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextImportant"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_explain_error_correction_choose_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（解释）"
        android:textColor="@color/color_4D72FF"
        android:textSize="13sp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/iv_error_correction_choose_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_edit_unselected"/>

</LinearLayout>