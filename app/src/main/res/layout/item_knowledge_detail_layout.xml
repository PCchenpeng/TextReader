<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <TextView
        android:id="@+id/tv_title_knowledge_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorTextImportant"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_content_knowledge_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingMultiplier="2"
        android:maxLines="3"
        android:textColor="@color/colorTextImportant"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/ll_expand_knowledge_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/tv_expand_knowledge_detail_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开"
            android:textColor="@color/colorTextNormal"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/iv_expand_knowledge_detail_item"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_expand_more_black_24dp"/>

    </LinearLayout>

</LinearLayout>