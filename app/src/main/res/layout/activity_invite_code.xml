<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorOrderDetailBg"
              android:orientation="vertical">

    <include layout="@layout/top_back_title_layout"/>

    <RelativeLayout
        android:id="@+id/rl_content_invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_code_invite_code"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_code_invite_code"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/shape_coupon_edit_bg"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入邀请码"
                android:maxLines="1"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_code_invite_code"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:background="@drawable/shape_coupon_text_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_invite_code"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_user_invite_code"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextImportant"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_grade_invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorTextNormal"
                    android:textSize="11sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_orange_round_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="已应邀"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"/>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_invite_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>