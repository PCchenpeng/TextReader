<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_state_list_loading_error"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/image_state_netfail"/>

    <TextView
        android:id="@+id/tv_tips_list_loading_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:text="加载数据失败，请重试～"
        android:textColor="@color/colorLoadingErrorTipText"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_reload_list_loading_error"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_4d72ff_bg"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"/>

</LinearLayout>