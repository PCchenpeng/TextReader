<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.lightsky.infiniteindicator.InfiniteIndicator
        android:id="@+id/infinite_indicator_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicator_type="indicator_anim_circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_guide_one"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/guidepage_dot_selected"/>

        <ImageView
            android:id="@+id/iv_guide_two"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/guidepage_dot_default"/>

        <ImageView
            android:id="@+id/iv_guide_three"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/guidepage_dot_default"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_root_guide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:background="@drawable/shape_guide_bule_radius"
        android:gravity="center"
        android:text="开启派知"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>
