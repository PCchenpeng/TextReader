<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="10dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/iv_background_classes_article_item"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_author_classes_article_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTextContent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_classes_article_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_classes_article_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="2dp"
        android:textColor="@color/colorTextImportant"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <View
        android:id="@+id/view_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

</LinearLayout>