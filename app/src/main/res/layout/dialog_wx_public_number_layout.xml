<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content_wx_public_number_dialog"
        android:layout_width="375dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_bg_wx_public_number_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_study_card_popup_bg"/>

        <ScrollView
            android:id="@+id/ll_code_wx_public_number_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code_wx_public_number_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_copy_wx_public_number_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/shape_ffe854_50dp_bg"
                    android:gravity="center"
                    android:textColor="@color/color_071269"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_content_wx_public_number_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="34dp"
                    android:background="@color/colorWhite"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_title_wx_public_number_dialog"
        android:layout_width="213dp"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_study_card_popup_title"/>

        <TextView
            android:id="@+id/tv_title_wx_public_number_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_071269"
            android:textSize="19sp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close_wx_public_number_dialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/rl_content_wx_public_number_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_close_white_stroke"/>

</RelativeLayout>