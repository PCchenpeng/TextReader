<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

    <ImageView
        android:id="@+id/iv_head_after_reading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:id="@+id/tv_username_after_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_head_after_reading"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_head_after_reading"
        android:textColor="@color/colorTextImportant"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_date_after_reading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_username_after_reading"
        android:layout_below="@id/tv_username_after_reading"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorTextNormal"
        android:textSize="11sp"/>

    <LinearLayout
        android:id="@+id/ll_liker_after_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_head_after_reading"
        android:layout_marginRight="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_liker_after_reading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_points_unselected"/>

        <TextView
            android:id="@+id/tv_liker_after_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_4D72FF"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content_after_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_after_reading"
        android:layout_margin="14dp"
        android:ellipsize="end"
        android:letterSpacing="0.1"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="3"
        android:textColor="@color/colorTextContent"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_content_after_reading"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorLines"/>

</RelativeLayout>