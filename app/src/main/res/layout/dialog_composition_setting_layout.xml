<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhiteLight"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字号"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <Space
            android:layout_width="28dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_font_minify_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="7"
            android:background="@drawable/shape_gray_storke_white_bg">

            <ImageView
                android:id="@+id/iv_font_minify_composition_setting_dialog"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_font_minify"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_font_size_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/colorTextContent"
            android:textSize="15sp"/>

        <RelativeLayout
            android:id="@+id/rl_font_enlarge_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="7"
            android:background="@drawable/shape_gray_storke_white_bg">

            <ImageView
                android:id="@+id/iv_font_enlarge_composition_setting_dialog"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_font_enlarge"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="间距"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <Space
            android:layout_width="28dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_no_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_row_spacing_max_composition_setting_dialog"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_text_space_one_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_row_spacing_01"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorLineLight"/>

            <RelativeLayout
                android:id="@+id/rl_row_spacing_normal_composition_setting_dialog"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_text_space_two_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_row_spacing_02"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorLineLight"/>

            <RelativeLayout
                android:id="@+id/rl_row_spacing_min_composition_setting_dialog"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_text_space_three_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_row_spacing_3"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亮度"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <Space
            android:layout_width="28dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_light_low"/>

        <SeekBar
            android:id="@+id/seek_bar_light_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="255"
            android:maxHeight="1.8dp"
            android:minHeight="1.8dp"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/seek_bar_light_setting"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_light_high"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <Space
            android:layout_width="28dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_bg_one_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_one"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_bg_two_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_two"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_bg_three_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_three"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_bg_four_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_four"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_bg_five_composition_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_five"/>

    </LinearLayout>

</LinearLayout>