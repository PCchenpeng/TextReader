<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_competition_item"
        android:layout_width="190dp"
        android:layout_height="107dp"/>

    <TextView
        android:id="@+id/tv_title_competition_item"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@id/iv_competition_item"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/colorTextImportant"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_content_competition_item"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_below="@id/tv_title_competition_item"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/colorTextNormal"
        android:textSize="11sp"/>

    <ImageView
        android:id="@+id/iv_status_competition_item"
        android:layout_width="190dp"
        android:layout_height="107dp"
        android:layout_alignBottom="@id/iv_competition_item"
        android:layout_alignRight="@id/iv_competition_item"
        android:src="@drawable/icon_competition_selected"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_status_competition_item"
        android:layout_width="190dp"
        android:layout_height="107dp"
        android:background="@drawable/shape_pay_failed_bg"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:visibility="gone"/>

</RelativeLayout>