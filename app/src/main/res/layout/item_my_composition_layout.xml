<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_selected_my_composition_item"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_edit_unselected"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_head_my_composition_item"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_public_my_composition_item"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/icon_writing_public"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_title_my_composition_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextImportant"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
s
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_number_my_composition_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextNormal"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/tv_date_my_composition_item"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorTextNormal"
                            android:textSize="11sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_status_my_composition_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:id="@+id/ll_task_my_composition_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_text_orange"/>

                        <TextView
                            android:id="@+id/tv_task_my_composition_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/color_4D72FF"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_cover_my_composition_item"
                    android:layout_width="60dp"
                    android:layout_height="51dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_operate_my_composition_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_operate_one_my_composition_item"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_my_composition_operate_selected"
                    android:gravity="center"
                    android:textColor="@color/color_4D72FF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_operate_two_my_composition_item"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_my_composition_operate_unselected"
                    android:gravity="center"
                    android:textColor="@color/colorTextImportant"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_operate_three_my_composition_item"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_my_composition_operate_unselected"
                    android:gravity="center"
                    android:textColor="@color/colorTextImportant"
                    android:textSize="14sp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_operate_more_my_composition_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="18dp"
                    android:paddingTop="4dp"
                    android:text="更多"
                    android:textColor="@color/colorTextImportant"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorOrderDetailBg"/>

</LinearLayout>