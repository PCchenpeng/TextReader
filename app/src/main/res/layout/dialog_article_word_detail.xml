<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#333333"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/iv_dialog_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_white_back"/>
            <TextView
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_dialog_back"
                android:layout_marginLeft="10dp"
                android:textColor="#FFF09C"
                android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_add_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="收录"
                    android:textColor="#FFF09C"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_below="@id/rl_top"
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFFFFF"/>
        <LinearLayout
            android:layout_below="@id/view_line"
            android:id="@+id/ll_pinyin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pinyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/iv_audio"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_speaker_white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#FFF09C"
            android:text="查看详情>>"/>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/ll_pinyin"
            android:layout_above="@id/tv_check_detail"
            android:id="@+id/rcl_worddetail"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>