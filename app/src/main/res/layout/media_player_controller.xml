<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp">

    <LinearLayout
        android:id="@+id/ll_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:background="@drawable/seek_bar_bg"
        android:gravity="center">

        <Space
            android:layout_width="64dp"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/seek_bar_classes_article"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="1.8dp"
            android:minHeight="1.8dp"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/seek_bar_thumb_press"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_player_classes_article"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/icon_media_player_start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_player_classes_article"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingLeft="72dp"
        android:paddingRight="32dp">

        <TextView
            android:id="@+id/tv_cur_media_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@color/color_4D72FF"
            android:textSize="12sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_total_media_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@color/color_4D72FF"
            android:textSize="12sp"/>
    </LinearLayout>

</RelativeLayout>