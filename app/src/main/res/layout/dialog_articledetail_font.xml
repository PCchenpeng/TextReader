<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteLight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字号"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <Space
            android:layout_width="28dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_font_minify"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="7"
            android:background="@drawable/shape_gray_storke_white_bg">

            <ImageView
                android:id="@+id/iv_font_minify"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_font_minify"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/colorTextContent"
            android:textSize="15sp"/>

        <RelativeLayout
            android:id="@+id/rl_font_enlarge"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="7"
            android:background="@drawable/shape_gray_storke_white_bg">

            <ImageView
                android:id="@+id/iv_font_enlarge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_font_enlarge"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="间距"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <Space
            android:layout_width="28dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_no_bg"
            android:orientation="horizontal">





            <RelativeLayout
                android:id="@+id/rl_row_spacing_min"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_text_space_three_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_row_spacing_3"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorLineLight"/>

            <RelativeLayout
                android:id="@+id/rl_row_spacing_normal"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_text_space_two_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_row_spacing_02"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorLineLight"/>

            <RelativeLayout
                android:id="@+id/rl_row_spacing_max"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_text_space_one_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_row_spacing_01"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <Space
            android:layout_width="28dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_bg_one_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_two"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_bg_two_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_one"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_bg_three_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_three"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/rl_bg_four_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_four"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/rl_bg_five_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@drawable/shape_text_bg_five"/>

    </LinearLayout>

</LinearLayout>