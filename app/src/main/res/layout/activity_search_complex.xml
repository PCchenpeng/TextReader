<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_root_search_complex"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/top_search_layout"/>

    <com.dace.textreader.view.tab.SmartTabLayout
        android:id="@+id/tab_layout_search_complex"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@color/colorWhite"
        app:stl_defaultTabTextColor="@drawable/color_tab_text"
        app:stl_defaultTabTextMinWidth="80dp"
        app:stl_defaultTabTextSize="15sp"
        app:stl_dividerColor="@color/colorTransparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="@color/colorOrange"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorWidth="20dp"
        app:stl_titleOffset="auto_center"
        app:stl_underlineColor="@color/colorTransparent"
        app:stl_underlineThickness="0dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_search_complex"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="96dp"/>

    <FrameLayout
        android:id="@+id/frame_search_complex"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:id="@+id/ll_voice_input_search_complex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_voice_search_complex"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_write_bottom_voice_input"/>

        <TextView
            android:id="@+id/tv_voice_search_complex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="按住说话搜索内容"
            android:textColor="@color/colorTextImportant"
            android:textSize="15sp"/>
    </LinearLayout>

</RelativeLayout>