<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_select_new_collection_writing_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/icon_edit_unselected"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_new_collection_writing_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="96dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorTextImportant"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_score_new_collection_writing_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="36dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:textColor="@color/colorTextOrange"
                android:textSize="24sp"/>

            <ImageView
                android:id="@+id/iv_score_new_collection_writing_item"
                android:layout_width="88dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/tv_score_new_collection_writing_item"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image_score_line"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_content_new_collection_writing_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.5"
                android:maxLines="2"
                android:textColor="@color/colorTextContent"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_comment_new_collection_writing_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content_new_collection_writing_item"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_composition_comment_bg"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/ll_task_new_collection_writing_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content_new_collection_writing_item"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_orange_btn"/>

                <TextView
                    android:id="@+id/tv_task_new_collection_writing_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_4D72FF"
                    android:textSize="12sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_has_delete_new_collection_writing_item"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorOrderDetailBg"
                android:gravity="center_vertical"
                android:text="作文已被作者删除或者设为私密"
                android:textColor="@color/colorTextNormal"
                android:textSize="12sp"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_author_new_collection_writing_item"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image_new_collection_writing_item"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_author_new_collection_writing_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_4D72FF"
                android:textSize="12sp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_views_new_collection_writing_item"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextNormal"
                android:textSize="11sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>