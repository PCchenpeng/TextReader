<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_root_voice_evaluation_entrance"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_voice_evaluation_entrance"
        android:layout_width="350dp"
        android:layout_height="88dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"/>

    <TextView
        android:id="@+id/tv_region_voice_evaluation_entrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_voice_evaluation_entrance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="广东赛区"
        android:textColor="@color/colorDarkRedNormal"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/iv_logo_voice_evaluation_entrance"
        android:layout_width="190dp"
        android:layout_height="134dp"
        android:layout_above="@id/tv_region_voice_evaluation_entrance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"/>

    <TextView
        android:id="@+id/tv_introduction_voice_evaluation_entrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_voice_evaluation_entrance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="查看活动介绍>>"
        android:textColor="@color/colorDarkRedNormal"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/iv_cover_voice_evaluation_entrance"
        android:layout_width="295dp"
        android:layout_height="123dp"
        android:layout_below="@id/tv_introduction_voice_evaluation_entrance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"/>

    <RelativeLayout
        android:id="@+id/rl_back_voice_evaluation_entrance"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_shadow_back"/>

    </RelativeLayout>

</RelativeLayout>