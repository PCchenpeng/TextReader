<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView_intensive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="64dp">

            <TextView
                android:id="@+id/tv_intensive_reading_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="系  统  根  据  等  级  为  您  自  动  标  注"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_intensive_reading_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="16dp"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_intensive_reading_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransparent"
                    android:gravity="fill"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingBottom="88dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="24dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/colorTextContent"
                    android:textColorHighlight="@color/selected_blue"
                    android:textIsSelectable="true"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:id="@+id/rl_word_bg_intensive_reading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="88dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="24dp"
                    android:paddingTop="16dp"/>

                <RelativeLayout
                    android:id="@+id/rl_intensive_reading_content_underline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="16dp"/>

                <RelativeLayout
                    android:id="@+id/rl_note_intensive"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingTop="16dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="读后感"
                android:textColor="@color/colorTextImportant"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/icon_thought_quote_pre"/>

            <LinearLayout
                android:id="@+id/ll_write_after_reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="43dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_editor_after_reading"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="写下你的读后感"
                    android:textColor="@color/colorTextImportant"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_after_reading_intensive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="43dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/tv_after_reading_content_intensive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/colorTextContent"
                    android:textSize="14sp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:layout_marginRight="23dp"
                android:src="@drawable/icon_thought_quote_after"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_appbar_intensive_reading"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#424242"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_close_appbar_intensive_reading"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="16dp"
                android:src="@drawable/icon_back_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="精读模式"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_intensive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_loading_intensive_reading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e9e9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#424242">

                <ImageView
                    android:id="@+id/iv_close_loading_intensive_reading"
                    android:layout_width="56dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="16dp"
                    android:src="@drawable/icon_back_white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="精读模式"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingLeft="56dp"
            android:paddingRight="56dp">

            <ImageView
                android:id="@+id/iv_loading_top_intensive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_loading_content_intensive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:textColor="@color/colorTextContent"
                android:textSize="22sp"/>

            <ImageView
                android:id="@+id/iv_loading_bottom_intensive"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/tv_loading_content_intensive"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
